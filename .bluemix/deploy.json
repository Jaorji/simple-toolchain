{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
        "$i18n": "locales.yml"
    },
    "title": {
        "$ref": "#/messages/deploy.title"
    },
    "description": {
        "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
        "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "prod-region": {
            "description": "The bluemix region",
            "type": "string",
	    "$validate":{
		   "method":"validateCFRegions"
	    }
	    
        },
        "prod-space": {
            "description": "The bluemix space",
            "type": "string",
	    "$validate":{
		   "method":"validateCFSpaces",
		   "params":{"region":"prod-region"}
	    }
        },
        "prod-organization": {
            "description": "The bluemix org",
            "type": "string",
	    "$validate":{
		   "method":"validateCFOrganizations",
		   "params":{"region":"prod-region"}
	    }
        },
	    "ji-region": {
            "description": "The bluemix region",
            "type": "string",
	    "$validate":{
		   "method":"validateCFRegions"
	    }
        },
        "ji-organization": {
            "description": "The bluemix org",
            "type": "string",
	    "$validate":{
		   "method":"validateCFOrganizations",
		   "params":{"region":"ji-region"}
	    }
        },
        "ji-space": {
            "description": "The bluemix space",
            "type": "string",
	    "$validate":{
		   "method":"validateCFSpaces",
		   "params":{"region":"ji-region"}
	    }
        },
	"test-region":{
            "description": "The bluemix region",
            "type": "string",
	    "$validate":{
		    "method":"validateCSRegions"
	    }
		    
	},

        "registry-namespace": {
            "description": "The bluemix namespace",
            "type": "string",
            "$validate":{
		    "params":{"region":"test-region"}
	    }
        },
        "registry-cluster-name":{
            "description": "The bluemix cluster name",
            "type":"string",
	    "$validate":{
		    "method":"validateCSClusterNames"
		    "params":{"region":"test-region"}
	    }
        },
        "api-key": {
            "description": "API key description",
            "type": "string"
        },
        "prod-app-name": {
            "description": {
                "$ref": "#/messages/deploy.appDescription"
            },
            "type": "string",
            "pattern": "\\S"
        }
    },
    "required": [
        "prod-region",
        "prod-organization",
        "prod-space",
	"ji-region",
	"ji-organization",
	"ji-space",
	"test-region",
        "prod-app-name",
        "registry-namespace",
        "registry-cluster-name",
        "api-key"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": {
                "$ref": "#/messages/deploy.appName"
            },
            "key": "prod-app-name"
        },
        {
	        "type": "password",
	        "readonly": false,
	        "title": "IBM Cloud API Key",
	        "key": "api-key"
        },
        {
            "type": "table",
            "columnCount": 4,
            "widths": [
                "15%",
                "28%",
                "28%",
		"28%"
            ],
            "items": [
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                },
		{
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/organization"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/space"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/prodStage"
                    }
                },
                {
                    "type": "select",
                    "key": "prod-region",
		    "$populate":{
			"method":"populateCFRegions"
		    }
			
                },
	        {
                    "type": "select",
                    "key": "prod-organization",
		    "$populate":{
			"method": "populateCFOrganizations",
			"params": {"region":"prod-region"}
		    }
                },
                {
                    "type": "select",
                    "key": "prod-space",
                    "readonly": false,
		    "$populate":{
			"method": "populateCFSpaces",
			"params": {"organization":"prod-organization","region":"prod-region"}
		    }
                },
		{
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/region"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/organization"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/space"
                    }
                },
                {
                    "type": "label",
                    "title": {
                        "$ref": "#/messages/jiStage"
                    }
                },
                {
                    "type": "select",
                    "key": "ji-region",
	            "$populate":{
			"method":"populateCFRegions"
		    }
                },
                {
                    "type": "select",
                    "key": "ji-organization",
	            "$populate":{
			"method": "populateCFOrganizations",
			"params": {"region":"ji-region"}
		    }
                },
                {
                    "type": "select",
                    "key": "ji-space",
                    "readonly": false,
	            "$populate":{
			"method": "populateCFSpaces",
			"params": {"organization":"ji-organization","region":"ji-region"}
		    }
                }
            ]
        },
	{
            "type": "select",       
            "title": "cs region",
            "key": "test-region",
             "$populate":{
	         "method":"populateCSRegions"
             }
        },
	
        {
            "type": "select",
            "readonly": false,
            "title": "name space",
            "key": "registry-namespace",
	    "$populate":{
	        "method": "populateCSNameSpaces",
	        "params": {"region":"test-region"}
             }
        },
        {
            "type": "select",
            "readonly": false,
            "title": "cluster name",
            "key": "registry-cluster-name",
	    "$populate":{
	        "method": "populateCSClusterNames",
	        "params": {"region":"test-region"}
             }
        }
    ]
}
